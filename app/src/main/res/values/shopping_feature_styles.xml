<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SquareButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/zero</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:topLeftRadius">@dimen/zero</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CategoryCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginTop">@dimen/spacing_categories_card_separation</item>
        <item name="android:layout_marginBottom">@dimen/spacing_categories_card_separation</item>
        <item name="cardElevation">@dimen/zero</item>
    </style>

    <style name="CategoryCardText">
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CategoryCardText.CollectionCard" >
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="CategoriesCollectionItem" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginTop">@dimen/spacing_collection_card</item>
        <item name="android:layout_marginBottom">@dimen/spacing_collection_card</item>
        <item name="android:layout_marginStart">@dimen/spacing_collection_card</item>
        <item name="android:layout_marginEnd">@dimen/spacing_collection_card</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">@dimen/card_elevation_medium</item>
    </style>

    <style name="CategoriesTabTitles" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CategoriesNewArrivalsCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">130dp</item>
        <item name="cardCornerRadius">@dimen/zero</item>
        <item name="cardElevation">1dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/spacing_categories_card_separation</item>
        <item name="android:layout_marginStart">@dimen/spacing_categories_card_separation</item>
        <item name="android:layout_marginBottom">@dimen/spacing_categories_card_separation</item>
    </style>
</resources>