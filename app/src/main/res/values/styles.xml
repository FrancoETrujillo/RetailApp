<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="HeaderDrawerText" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="ShoppingTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ShopBySpinnerStyle" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SquareButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/colorPrimaryDarkTransparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:bottomLeftRadius">0dp</item>
        <item name="android:bottomRightRadius">0dp</item>
        <item name="android:topRightRadius">0dp</item>
        <item name="android:topLeftRadius">0dp</item>
    </style>

</resources>
